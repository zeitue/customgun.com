- content_for :title,  "Photos"
.page-header
  %h1 Photos
= link_to 'New Photo', new_photo_path, :class => "btn btn-primary"
%br
%table.table.table-hover
  %thead
    %tr
      %th ID
      %th Product
      %th Image
      %th
  %tbody
    - @photos.each do |photo|
      %tr
        %td= photo.product_id
        %td= Product.where(id: photo.product_id).first.title.titleize unless Product.where(id: photo.product_id).first.nil?
        %td= link_to image_tag(photo.image.thumb), photo
        %td
          = link_to 'Show', photo, :class => "btn btn-primary btn-block"
          = link_to 'Edit', edit_photo_path(photo), :class => "btn btn-primary btn-block"
          = link_to 'Destroy', photo, :method => :delete, :data => { :confirm => 'Are you sure?' }, :class => "btn btn-primary btn-block"


