%p#notice= notice
%p
  %b ID:
  = @photo.product_id

%p
  %b Product:
  = Product.where(id: @photo.product_id).first.title.titleize unless Product.where(id: @photo.product_id).first.nil?
  = image_tag @photo.image.hdpi, :style => "max-width: 100%;"

= link_to 'Edit', edit_photo_path(@photo), :class => "btn btn-primary"
\|
= link_to 'Back', photos_path, :class => "btn btn-primary"
