%h2
  Edit #{resource_name.to_s.humanize}
= form_for(resource, as: resource_name, url: registration_path(resource_name), html: { method: :put }) do |f|
  = devise_error_messages!
  .field
    .input-group
      %span#name-addon.input-group-addon Name
      = f.text_field :name, class: "form-control input-lg","aria-describedby" => "name-addon"
  .field
    .input-group
      %span#email-addon.input-group-addon Email
      = f.text_field :email, class: "form-control input-lg","aria-describedby" => "email-addon"
      - if devise_mapping.confirmable? && resource.pending_reconfirmation?
        %div
          Currently waiting confirmation for: #{resource.unconfirmed_email}
  .field
    .input-group
      %span#password-addon.input-group-addon Password
      = f.password_field :password, autocomplete: "off", placeholder: "leave blank if you don't want to change it",  class: "form-control input-lg","aria-describedby" => "password-addon"
  .field
    .input-group
      %span#confirm-password-addon.input-group-addon Confirm Password
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: "leave blank if you don't want to change it",  class: "form-control input-lg","aria-describedby" => "confirm-password-addon"
  .field
    .input-group
      %span#current-password-addon.input-group-addon Current Password
      = f.password_field :current_password, autocomplete: "off", placeholder: "we need your current password to confirm your changes",  class: "form-control input-lg","aria-describedby" => "current-password-addon"
  .actions
    %p
    = f.submit "Save", class: "btn btn-primary btn-block"
%p
= link_to "Back", :back, class: "btn btn-primary btn-block"
