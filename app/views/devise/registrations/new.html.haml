%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    .input-group
      %span#email-addon.input-group-addon Email
      = f.email_field :email, autofocus: true, class: "form-control input-lg","aria-describedby" => "email-addon"
  .field
    .input-group
      %span#password-addon.input-group-addon 
        Password
        - if @minimum_password_length
          %em
            (#{@minimum_password_length} characters minimum)
      = f.password_field :password, autocomplete: "off", class: "form-control input-lg","aria-describedby" => "password-addon"
  .field
    .input-group
      %span#password-confirmation-addon.input-group-addon= f.label :password_confirmation
      = f.password_field :password_confirmation, autocomplete: "off", class: "form-control input-lg","aria-describedby" => "password-confirmation-addon"
  %br/
  .actions
    = f.submit "Sign up", class: "btn btn-primary btn-block"
= render "devise/shared/links"
