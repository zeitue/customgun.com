%h2 Sign up
= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f|
  = devise_error_messages!
  .field
    .input-group
      %span#first-name-addon.input-group-addon First Name
      = f.text_field :first_name, autofocus: true, class: "form-control input-lg","aria-describedby" => "first-name-addon"
  .field
    .input-group
      %span#last-name-addon.input-group-addon Last Name
      = f.text_field :last_name, class: "form-control input-lg","aria-describedby" => "last-name-addon"
  .field
    .input-group
      %span#email-addon.input-group-addon Email
      = f.email_field :email, class: "form-control input-lg","aria-describedby" => "email-addon"
  .field
    .input-group
      %span#password-addon.input-group-addon Password
      = f.password_field :password, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum", class: "form-control input-lg","aria-describedby" => "password-addon"
  .field
    .input-group
      %span#password-confirmation-addon.input-group-addon Confirm Password
      = f.password_field :password_confirmation, autocomplete: "off", placeholder: "#{@minimum_password_length} characters minimum", class: "form-control input-lg","aria-describedby" => "password-confirmation-addon"
  %br/
  .actions
    = f.submit "Sign up", class: "btn btn-primary btn-block"
= render "devise/shared/links"
