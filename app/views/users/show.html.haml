- content_for :title, @user.name.nil? ? 'User: ' + @user.email.partition('@').first.titleize : 'User: ' + @user.name.titleize
.page-header
  -if @user.name.nil?
    %h1=@user.email.partition('@').first.titleize
  -else
    %h1=@user.name.to_s.titleize
.panel.panel-default
  .panel-heading User Information
  %table.table.panel-body
    -if !(@user.name.nil? || @user.name.empty?)
      %tr
        %td Name
        %td= @user.name
    %tr
      %td Email
      %td= @user.email
