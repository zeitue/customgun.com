= form_for @product, :multipart => true do |f|
  - if @product.errors.any?
    #error_explanation
      %h2= "#{pluralize(@product.errors.count, "error")} prohibited this product from being saved:"
      %ul
        - @product.errors.full_messages.each do |msg|
          %li= msg
  .form-group
    .field
      = f.text_field :title, placeholder: "Title", class: "form-control input-lg"
    .field
      = f.text_area :description, placeholder: "Description", class: "form-control input-lg"
    .field
      .input-group
        %span#price-addon.input-group-addon Price
        = f.number_field :price, :class => 'text_field', :step => 0.01, placeholder: "$0.00", class: "form-control input-lg","aria-describedby" => "price-addon"
    .field
      .input-group
        %span#quantity-addon.input-group-addon Quantity
        = f.number_field :quantity, placeholder: "1", class: "form-control input-lg","aria-describedby" => "quantity-addon"
    .field
      = f.text_field :manufacturer, placeholder: "Manufacturer", class: "form-control input-lg"
    .field
      = f.text_field :model, placeholder: "Model", class: "form-control input-lg"
    .field
      = f.text_field :part_number, placeholder: "Part Number", class: "form-control input-lg"
    .field
      = f.text_field :type_field, placeholder: "Type", class: "form-control input-lg"
    .field
      = f.text_field :style_field, placeholder: "Style", class: "form-control input-lg"
    .field
      = f.text_field :material, placeholder: "Material", class: "form-control input-lg"
    .field
      = f.text_field :caliber, placeholder: "Caliber/Gauge", class: "form-control input-lg"
    .field
      = f.number_field :barrel_length, :class => 'text_field', :step => 0.001, placeholder: "Barrel Length in", class: "form-control input-lg"
    .field
      = f.number_field :weight, :class => 'text_field', :step => 0.001, placeholder: "Weight kg", class: "form-control input-lg"
    .field
      = f.number_field :height, :class => 'text_field', :step => 0.1, placeholder: "Height cm", class: "form-control input-lg"
    .field
      = f.number_field :width, :class => 'text_field', :step => 0.1, placeholder: "Width cm", class: "form-control input-lg"
    .field
      = f.number_field :length, :class => 'text_field', :step => 0.1, placeholder: "Length cm", class: "form-control input-lg"
    .field
      = f.text_field :tags, placeholder: "tag0, tag1, tag2, tagn", class: "form-control input-lg"
    .form-group
      = f.select :store, [['Barrels', 'barrels'], ['DÃ©cor','decor'], ['Gifts', 'gifts'], ['Gun Cases', 'gun_cases'], ['Gun Parts', 'gun_parts'], ['Guns', 'guns'], ['Jewelry', 'jewelry'], ['Optics', 'optics'], ['Wood', 'wood']], {}, { :class => 'form-control input-lg' }
    .form-group
      = f.file_field :image, :multiple => true, name: "photos[image][]", class: "form-control input-lg", type: "file"
    .field.checkbox-inline
      = f.check_box :exclusive, type: "checkbox"
      = f.label "This item ships by itself"
    .field.checkbox-inline
      = f.check_box :active, type: "checkbox"
      = f.label "This product shows in the store"

    .actions
    %br
      = f.submit 'Save', :class => "btn btn-primary"
