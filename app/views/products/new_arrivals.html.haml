- content_for :title,  "New Arrivals"
.page-header
  %h1 New Arrivals


= render   'new_arrivals_grid'


.row
  .col-md-2
    Search
  .col-md-10
    = grid_filter @new_arrivals_grid, :title_filter
.row
  .col-md-2
    Model
  .col-md-10
    = grid_filter @new_arrivals_grid, :model_filter
.row
  .col-md-2
    Type
  .col-md-10
    = grid_filter @new_arrivals_grid, :type_filter


%br
.row-fluid
  .col-md-12
    .external-buttons
      %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
      %button.btn.btn-primary.wg-external-reset-button{'data-grid-name' => 'grid'} Reset

.row-fluid
  .col-md-12

    = render_grid(@new_arrivals_grid)
