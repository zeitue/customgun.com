- content_for :title,  "Décor"
.page-header
  %h1 Décor

= render   'decor_grid'


.row
  .col-md-2
    Product:
  .col-md-10
    = grid_filter @decor_grid, :title_filter


.row
  .col-md-2
    Manufacturer:
  .col-md-10
    = grid_filter @decor_grid, :manufacturer_filter
.row
  .col-md-2
    Material:
  .col-md-10
    = grid_filter @decor_grid, :material_filter

.row
  .col-md-2
    Model:
  .col-md-10
    = grid_filter @decor_grid, :model_filter

.row-fluid
  .col-md-12
    .external-buttons
      %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
      %button.btn.btn-primary.wg-external-reset-button{'data-grid-name' => 'grid'} Reset

%br
.row-fluid
  .col-md-12

    = render_grid(@decor_grid)
