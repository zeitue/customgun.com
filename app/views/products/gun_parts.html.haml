%h1 Gun Parts
= render   'gun_parts_grid'


.row
  .col-md-2
    Title:
  .col-md-10
    = grid_filter @gun_parts_grid, :title_filter


.row
  .col-md-2
    Manufacturer:
  .col-md-10
    = grid_filter @gun_parts_grid, :manufacturer_filter


.row
  .col-md-2
    Model:
  .col-md-10
    = grid_filter @gun_parts_grid, :model_filter

.row
  .col-md-2
    Part Number:
  .col-md-10
    = grid_filter @gun_parts_grid, :part_number_filter

.row
  .col-md-2
    Price:
  .col-md-10
    = grid_filter @gun_parts_grid, :price_filter

.row-fluid
  .col-md-12
    .external-buttons
      %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
      %button.btn.btn-primary.wg-external-reset-button{'data-grid-name' => 'grid'} Reset

.row-fluid
  .col-md-12

    = render_grid(@gun_parts_grid)
