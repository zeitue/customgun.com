<%= define_grid(@gun_cases_grid, hide_submit_button: true, hide_reset_button: true, upper_pagination_panel: true , html: {class: 'table table-striped table-hover table-condensed table-responsive'}) do |g|
  g.blank_slate content_tag(:div, "No records found", class: 'well')


  g.column name:  'Product', attribute: 'title', detach_with_id: :title_filter do |x|
  link_to(x.title.titleize, x) + (br() + link_to(image_tag(x.photos.first.image.thumb), x) unless x.photos.first.nil?) + br() +" Price: " + (number_to_currency x.price).to_s
  end

  g.column name:  'Manufacturer', attribute: 'manufacturer', detach_with_id: :manufacturer_filter, custom_filter: Product.where(:store => "gun_cases").select("DISTINCT(MANUFACTURER)").map {|p| [p.manufacturer.titleize, p.manufacturer]} do |x|
  x.manufacturer.titleize
  end


  g.column name:  'Type', attribute: 'part_number', detach_with_id: :type_filter, custom_filter: Product.where(:store => "gun_cases").select("DISTINCT(PART_NUMBER)").map {|p| [p.part_number.titleize, p.part_number]} do |x|
  x.part_number.titleize
  end


end -%>
