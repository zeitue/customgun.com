%h1 Store

%table.table.table-hover
  %thead
    %tr
      %th Title
      %th Price
      %th
      %th

  %tbody
    - @products.each do |product|
      %tr
        %td= link_to product.title.titleize, product
        %td= number_to_currency product.price
        %td= link_to 'Edit', edit_product_path(product), class: "btn btn-danger"
        %td= link_to 'Destroy', product, :method => :delete, :data => { :confirm => 'Are you sure?' }, class: "btn btn-danger"

%br

= link_to 'New Product', new_product_path, class: "btn btn-danger"
