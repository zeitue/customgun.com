- content_for :title,  "Guns"
.page-header
  %h1 Guns

= render   'guns_grid'


.row
  .col-md-2
    Search
  .col-md-10
    = grid_filter @guns_grid, :title_filter

.row
  .col-md-2
    Manufacturer
  .col-md-10
    = grid_filter @guns_grid, :manufacturer_filter

.row
  .col-md-2
    Model
  .col-md-10
    = grid_filter @guns_grid, :model_filter

.row
  .col-md-2
    Type
  .col-md-10
    = grid_filter @guns_grid, :type_filter

.row
  .col-md-2
    Caliber/Gauge
  .col-md-10
    = grid_filter @guns_grid, :caliber_filter

.row
  .col-md-2
    Material
  .col-md-10
    = grid_filter @guns_grid, :material_filter

.row-fluid
  .col-md-12
    .external-buttons
      %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
      %button.btn.btn-primary.wg-external-reset-button{'data-grid-name' => 'grid'} Reset

%br
.row-fluid
  .col-md-12

    = render_grid(@guns_grid)

= link_to 'New Product', new_product_path, class: "btn btn-primary"



