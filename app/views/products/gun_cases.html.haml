- content_for :title,  "Gun Cases"
%h1 Gun Cases

= render   'gun_cases_grid'


.row
  .col-md-2
    Product:
  .col-md-10
    = grid_filter @gun_cases_grid, :title_filter


.row
  .col-md-2
    Manufacturer:
  .col-md-10
    = grid_filter @gun_cases_grid, :manufacturer_filter


.row
  .col-md-2
    Type:
  .col-md-10
    = grid_filter @gun_cases_grid, :type_filter


%br
.row-fluid
  .col-md-12
    .external-buttons
      %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
      %button.btn.btn-primary.wg-external-reset-button{'data-grid-name' => 'grid'} Reset

.row-fluid
  .col-md-12

    = render_grid(@gun_cases_grid)
