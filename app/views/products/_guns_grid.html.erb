<%= define_grid(@guns_grid, hide_submit_button: true, hide_reset_button: true, upper_pagination_panel: true , html: {class: 'table table-striped table-hover table-condensed'}) do |g|
  g.blank_slate content_tag(:div, "No products found", class: 'well')


  g.column name:  'Product', attribute: 'title', detach_with_id: :title_filter do |x|
  link_to(x.title.titleize, x) + (br() + link_to(image_tag(x.photos.first.image.thumb), x) unless x.photos.first.nil?) + br() +" Price: " + (number_to_currency x.get_price).to_s
  end

  g.column name:  'Manufacturer', attribute: 'manufacturer', detach_with_id: :manufacturer_filter, custom_filter: Product.where(:store => "guns").select("DISTINCT(MANUFACTURER)").map {|p| [p.manufacturer.titleize, p.manufacturer]} do |x|
  x.manufacturer.titleize
  end


  g.column name:  'Model', attribute: 'model', detach_with_id: :model_filter, custom_filter: Product.where(:store => "guns").select("DISTINCT(MODEL)").map {|p| [p.model.titleize, p.model]} do |x|
  x.model.titleize
  end

  g.column name:  'Type', attribute: 'type_field', detach_with_id: :type_filter, custom_filter: Product.where(:store => "guns").select("DISTINCT(TYPE_FIELD)").map {|p| [p.type_field.titleize, p.type_field]} do |x|
  x.type_field.titleize
  end

  g.column name:  'Caliber', attribute: 'caliber', detach_with_id: :caliber_filter, custom_filter: Product.where(:store => "guns").select("DISTINCT(CALIBER)").map {|p| [p.caliber.titleize, p.caliber]} do |x|
  x.caliber.titleize
  end

  g.column name:  'Material', attribute: 'material', detach_with_id: :material_filter, custom_filter: Product.where(:store => "guns").select("DISTINCT(MATERIAL)").map {|p| [p.material.titleize, p.material]} do |x|
  x.material.titleize
  end

end -%>
