- content_for :title,  "Custom Parts"
.page-header
  %h1 Custom Parts
= render   'custom_parts_grid'


.row
  .col-md-2
    Search
  .col-md-10
    = grid_filter @custom_parts_grid, :title_filter


.row
  .col-md-2
    Manufacturer
  .col-md-10
    = grid_filter @custom_parts_grid, :manufacturer_filter


.row
  .col-md-2
    Model
  .col-md-10
    = grid_filter @custom_parts_grid, :model_filter

.row
  .col-md-2
    Type
  .col-md-10
    = grid_filter @custom_parts_grid, :type_filter


%br
.row-fluid
  .col-md-12
    .external-buttons
      %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
      %button.btn.btn-primary.wg-external-reset-button{'data-grid-name' => 'grid'} Reset

.row-fluid
  .col-md-12

    = render_grid(@custom_parts_grid)
