- content_for :title,  "Gifts"
.page-header
  %h1 Gifts


= render   'gifts_grid'


.row
  .col-md-2
    Product:
  .col-md-10
    = grid_filter @gifts_grid, :title_filter


.row
  .col-md-2
    Model:
  .col-md-10
    = grid_filter @gifts_grid, :model_filter
.row
  .col-md-2
    Type:
  .col-md-10
    = grid_filter @gifts_grid, :type_filter
.row
  .col-md-2
    Material:
  .col-md-10
    = grid_filter @gifts_grid, :material_filter


%br
.row-fluid
  .col-md-12
    .external-buttons
      %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
      %button.btn.btn-primary.wg-external-reset-button{'data-grid-name' => 'grid'} Reset

.row-fluid
  .col-md-12

    = render_grid(@gifts_grid)
