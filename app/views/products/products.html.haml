- content_for :title,  "Products"
.page-header
  %h1 Products

= render   'grid'


.row
  .col-md-2
    Search
  .col-md-10
    = grid_filter @grid, :title_filter

  .col-md-2
    Category
  .col-md-10
    = grid_filter @grid, :category_filter


.row
  .col-md-2
    Manufacturer
  .col-md-10
    = grid_filter @grid, :manufacturer_filter

.row
  .col-md-2
    Model
  .col-md-10
    = grid_filter @grid, :model_filter

.row-fluid
  .col-md-12
    .external-buttons
      %button.btn.btn-primary.wg-external-submit-button{'data-grid-name' => 'grid'} Submit
      %button.btn.btn-primary.wg-external-reset-button{'data-grid-name' => 'grid'} Reset
      = link_to 'New Product', new_product_path, class: "btn btn-primary"
%br
.row-fluid
  .col-md-12

    = render_grid(@grid)





