<body>
<script type="text/javascript">
$('a.image').fancybox({
  padding: 0,
showNavArrows: true,
  helpers: {
    overlay: {
      locked: false
    }
  }
});
</script>
<script type="text/javascript">
$(document).ready(function(){
  document.oncontextmenu = function() {return false;};

  $(document).mousedown(function(e){
    if( e.button == 2 ) {
      dispHandle("dash");
      return false;
    }
    return true;
  });
});
</script>
